<% if(success && success.length > 0) { %>
<div class="col-6 offset-3 alert alert-success mt-1 alert-dismissible fade show" role="alert">
  <%= success %>
  <button
    type="button"
    class="btn-close"
    data-bs-dismiss="alert"
    aria-label="Close"
  ></button>
</div>


<% } %> <% if(error && error.length > 0) { %>
<div class="col-6 offset-3 alert alert-danger mt-1 alert-dismissible fade show" role="alert">
  <%= error %>
  <button
    type="button"
    class="btn-close"
    data-bs-dismiss="alert"
    aria-label="Close"
  ></button>
</div>
<% } %>
