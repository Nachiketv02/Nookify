<% layout("admin/layout") %>

<div>
  <h1 class="text-3xl font-bold mb-6">Edit Listing</h1>
  <form action="/admin/listings/<%= listing._id %>?_method=PUT" method="POST">
    <div class="mb-4">
      <label for="title" class="block text-sm font-bold">Title:</label>
      <input type="text" id="title" name="title" value="<%= listing.title %>" class="w-full border-gray-300 rounded-lg">
    </div>
    <div class="mb-4">
      <label for="description" class="block text-sm font-bold">Description:</label>
      <input type="text" id="description" name="description" value="<%= listing.description %>" class="w-full border-gray-300 rounded-lg">
    </div>
    <div class="mb-4">
      <label for="price" class="block text-sm font-bold">Price:</label>
      <input type="number" id="price" name="price" value="<%= listing.price %>" class="w-full border-gray-300 rounded-lg">
    </div>
    <div class="mb-4">
      <label for="location" class="block text-sm font-bold">Location:</label>
      <input type="text" id="location" name="location" value="<%= listing.location %>" class="w-full border-gray-300 rounded-lg">
    </div>
    <div class="mb-4">
      <label for="country" class="block text-sm font-bold">Country:</label>
      <input type="text" id="country" name="country" value="<%= listing.country %>" class="w-full border-gray-300 rounded-lg">
    </div>
    <button type="submit" class="bg-green-600 text-white px-4 py-2 rounded">Update Listing</button>
  </form>
</div>
