<% layout("/layouts/boilerplate.ejs") %>
<body>
    <br>
    <div class="row">
        <div class="col-8 offset-2">
            <h2>Edit details</h2>
            <form method="post" action="/listings/<%= listing.id %>?_method=PUT" class="needs-validation" novalidate enctype="multipart/form-data">
            <div class="mb-3">
                <label for="title" class="form-lable">Title</label>
                <input
                type="text"
                value="<%= listing.title %>"
                name="listings[title]"
                class="form-control"
                required
                />
            </div>
            <div class="mb-3">
                <label for="description" class="form-lable">Description</label>
                <textarea
                type="text"
                placeholder="Enter description"
                name="listings[description]"
                class="form-control"
                required
                ><%= listing.description %></textarea>
            </div>

            <div class="mb-3">
                Original Image : <br>
                <img src="<%= listing.image.url %>" alt="" style="height: 150px; width: 150px;" />
            </div>

            <div class="mb-3">
                <label for="image" class="form-lable">Upload New Image</label>
                <input type="file" name="listings[image]" class="form-control"/>
            </div>
            <div class="row">
                <div class="mb-3 col-md-4">
                    <label for="Price" class="form-lable">Price</label>
                    <input type="number" value="<%= listing.price %>" name="listings[price]" class="form-control" required/>
                </div>
                <div class="mb-3 col-md-8">
                    <label for="location" class="form-lable">Location</label>
                    <input
                    type="text"
                    value="<%= listing.location %>"
                    name="listings[location]"
                    class="form-control"
                    required
                    />
                </div>
            </div>
            <div class="mb-3">
                <label for="country" class="form-lable">Country</label>
                <input
                type="text"
                value="<%= listing.country %>"
                name="listings[country]"
                class="form-control"
                required
                />
            </div>
            <button class="btn btn-dark mb-3 add-btn">Edit</button>
            </form>
        </div>
    </div>
</body>



 


