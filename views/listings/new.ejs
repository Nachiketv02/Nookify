<% layout("/layouts/boilerplate.ejs") %>
  <body>
    <br>
    <div class="row">
        <div class="col-8 offset-2">
            <h2>Enter details</h2>
            <form method="post" action="/listings" class="needs-validation" novalidate enctype="multipart/form-data">
            <div class="mb-3">
                <label for="title" class="form-lable">Title</label>
                <input
                type="text"
                placeholder="Add a catchy title"
                name="listings[title]"
                class="form-control"
                required
                />
                <div class="valid-feedback">Title Looks good!</div>
            </div>
            <div class="mb-3">
                <label for="description" class="form-lable">Description</label>
                <textarea
                type="text"
                placeholder="Enter description"
                name="listings[description]"
                class="form-control"
                required
                ></textarea>
                <div class="invalid-feedback">Please enter short description.</div>
            </div>
            <div class="mb-3">
                <label for="image" class="form-lable">Upload Image</label>
                <input type="file" name="listings[image]" class="form-control" required/>
            </div>
            <!-- <div class="mb-3">
                <label for="country" class="form-lable">Category</label>
                <input
                type="text"
                placeholder="Tranding"
                name="listings[category]"
                class="form-control"
                required
                />
                <div class="invalid-feedback">Please enter valid catagory</div>
            </div> -->
            <div class="row">
                <div class="mb-3 col-md-4">
                    <label for="Price" class="form-lable">Price</label>
                    <input type="text" placeholder="1200" name="listings[price]" class="form-control" required/>
                    <div class="invalid-feedback">Enter valid price</div>
                </div>
                <div class="mb-3 col-md-8">
                    <label for="location" class="form-lable">Location</label>
                    <input
                    type="text"
                    placeholder="Ahemdabad, Gujarat"
                    name="listings[location]"
                    class="form-control"
                    required
                    />
                    <div class="invalid-feedback">Please enter valid location.</div>
                </div>
            </div>
            <div class="mb-3">
                <label for="country" class="form-lable">Country</label>
                <input
                type="text"
                placeholder="India"
                name="listings[country]"
                class="form-control"
                required
                />
                <div class="invalid-feedback">Please enter valid country.</div>
            </div>
            <button class="btn btn-dark mb-3 add-btn">ADD</button>
            </form>
        </div>
    </div>
</body>
